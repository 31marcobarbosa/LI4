@model IEnumerable<WhatsYummy.Models.Estabelecimento>

@{
    ViewData["Title"] = "Os seus estabelecimentos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    <div class="col-lg-12">
		<div style="overflow-x:auto;">
			<table class="table">
			    <thead>
			        <tr>
			                <th>
			                    @Html.DisplayNameFor(model => model.Nome)
			                </th>
			                <th>
			                    @Html.DisplayNameFor(model => model.Localidade)
			                </th>
			                <th>
			                    @Html.DisplayNameFor(model => model.CodigoPostal)
			                </th>
			                <th>
			                    @Html.DisplayNameFor(model => model.Rua)
			                </th>
			                <th>
			                    @Html.DisplayNameFor(model => model.Estado)
			                </th>
			                <th>
			                    @Html.DisplayNameFor(model => model.NumProdutos)
			                </th>
			            <th></th>
			        </tr>
			    </thead>
			    <tbody>
			@foreach (var item in Model) {
			        <tr>
			            <td>
			                @Html.DisplayFor(modelItem => item.Nome)
			            </td>
			            <td>
			                @Html.DisplayFor(modelItem => item.Localidade)
			            </td>
			            <td>
			                @Html.DisplayFor(modelItem => item.CodigoPostal)
			            </td>
			            <td>
			                @Html.DisplayFor(modelItem => item.Rua)
			            </td>
			            <td>
			                @Html.DisplayFor(modelItem => item.Estado)
			            </td>
			            <td>
			                @Html.DisplayFor(modelItem => item.NumProdutos)
			            </td>
			            <td>
			                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
			                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
			                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
			            </td>
			        </tr>
			}
			    </tbody>
			</table>
        </div>
    </div>
</div>